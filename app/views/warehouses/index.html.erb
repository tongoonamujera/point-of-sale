<div class="container">
  <div class="carousel-cards">
    <% @warehouses.each do |warehouse|%>
      <% if warehouse.id == @warehouses.first.id %>
        <input type="radio" name="radio" id="<%=warehouse.id %>" class="input-<%=warehouse.id %>" checked />
      <% else %>
        <input type="radio" name="radio" id="<%=warehouse.id %>" class="input-<%=warehouse.id %>">
      <% end %>
      <div class="carousel-<%=warehouse.id %> mr-3 ml-3">
        <div class="carousel-container">
          <div class="carousel-header">
            <%= warehouse.product.capitalize %>
          </div>
          <div class="carousel-body">
            <table>
              <thead>
                <tr>
                  <th>Quantity</th>
                  <th>Barcode</th>
                  <th>Price</th>
                  <th>Unit</th>
                </tr>
              </thead>

              <tbody>
                <tr>
                  <td><%= warehouse.quantity_per_box_or_carton %></td>
                  <td><%= warehouse.barcode %></td>
                  <td><%= warehouse.total_cost %></td>
                  <td><%= warehouse.units %></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="carousel-footer">
            <%= link_to 'Show', warehouse, class:"submit" %>
            <%= link_to 'Destroy', warehouse, method: :delete, data: { confirm: 'Are you sure?' }, class:"submit danger-outline" %>
            <%= link_to 'Edit', edit_warehouse_path(warehouse), class:"submit" %>
          </div>
          <div class="last-elem">
            <%= link_to 'New Warehouse', new_warehouse_path %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="carousel-navigation">
    <% @warehouses.each do |warehouse|%>
      <label for="<%= warehouse.id %>" class="label-<%= warehouse.id %>"></label>
    <% end %>
  </div>
</div>
