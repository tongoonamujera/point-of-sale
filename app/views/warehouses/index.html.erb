<p id="notice"><%= notice %></p>

<h1>Warehouses</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Barcode</th>
      <th>Units</th>
      <th>Quantity per box or carton</th>
      <th>Total cost</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.product %></td>
        <td><%= warehouse.barcode %></td>
        <td><%= warehouse.units %></td>
        <td><%= warehouse.quantity_per_box_or_carton %></td>
        <td><%= warehouse.total_cost %></td>
        <td><%= warehouse.user_id %></td>
        <td><%= link_to 'Show', warehouse %></td>
        <td><%= link_to 'Edit', edit_warehouse_path(warehouse) %></td>
        <td><%= link_to 'Destroy', warehouse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

