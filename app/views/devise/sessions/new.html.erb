
<div class="columns is-centered">
  <div class="column-6">
    <div class="card">
      <div class="aside grdx-pnkl-orn text-white column-4">
        <h1 class="text-info aside-header">Log In</h1>
        <div class="aside-body">
          <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Sit, reiciendis?</p>
        </div>
      </div>

      <div class="body column-8 shadow-light">
        <div class="card-header">
          <h2>Log in</h2>
        </div>
        <div class="card-content">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, class:"label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
            </div>

            <div class="field">
              <%= f.label :password, class:"label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:'input' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class:"label" %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class:'submit is-fullwidth grdx-pnkl-orn' %>
            </div>
          <% end %>

          <div class="field has-text-centered">
            <span class="has-text-centered"><i>OR</i></span>
          </div>
        </div>
        <div class="card-footer mt-1 flex-col">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
