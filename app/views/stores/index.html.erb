<div class="columns is-centered">
  <div class="column-8 m-column-11 is-centered">
    <h1>Stores</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Barcode</th>
          <th>Price</th>
          <th>User</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @stores.each do |store| %>
          <tr>
            <td><%= store.product %></td>
            <td><%= store.barcode %></td>
            <td><%= store.price %></td>
            <td><%= store.user_id %></td>
            <td><%= link_to 'Show', store %></td>
            <td><%= link_to 'Edit', edit_store_path(store) %></td>
            <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>
